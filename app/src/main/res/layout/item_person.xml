<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/darker_gray"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<TextView
    android:id="@+id/backgroundone"
    android:layout_width="170dp"
    android:layout_height="200dp"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="15dp"
    android:background="@android:color/white"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/textone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="001"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@+id/backgroundone"
        app:layout_constraintLeft_toLeftOf="@+id/backgroundone"/>

    <ImageView
        android:id="@+id/imageone"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:background="@drawable/shoe1"
        app:layout_constraintTop_toTopOf="@+id/backgroundone"
        app:layout_constraintRight_toRightOf="@+id/backgroundone"/>

    <TextView
        android:id="@+id/texttwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NIKE BRAND"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="@+id/backgroundone"
        app:layout_constraintTop_toBottomOf="@+id/imageone"/>

    <TextView
        android:id="@+id/textthree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Running Shoe"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="@+id/backgroundone"
        app:layout_constraintTop_toBottomOf="@+id/texttwo"/>

    <TextView
        android:id="@+id/textfour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$999"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="@+id/backgroundone"
        app:layout_constraintTop_toBottomOf="@+id/textthree"/>

    <Button
        android:id="@+id/shoppingcard"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/shoppingcard"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="@+id/backgroundone"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundone"/>


    <TextView
        android:id="@+id/backgroundtwo"
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/backgroundone"/>

    <TextView
        android:id="@+id/textones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="002"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@+id/backgroundtwo"
        app:layout_constraintLeft_toLeftOf="@+id/backgroundtwo"/>


    <ImageView
        android:id="@+id/imagetwo"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:background="@drawable/shoe1"
        app:layout_constraintTop_toTopOf="@+id/backgroundtwo"
        app:layout_constraintRight_toRightOf="@+id/backgroundtwo"/>

    <TextView
        android:id="@+id/texttwos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NIKE BRAND"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="@+id/backgroundtwo"
        app:layout_constraintTop_toBottomOf="@+id/imagetwo"/>

    <TextView
        android:id="@+id/textthrees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Running Shoe"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="@+id/backgroundtwo"
        app:layout_constraintTop_toBottomOf="@+id/texttwos"/>

    <TextView
        android:id="@+id/textfours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$999"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="@+id/backgroundtwo"
        app:layout_constraintTop_toBottomOf="@+id/textthrees"/>

    <Button
        android:id="@+id/shoppingcards"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/shoppingcard"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="@+id/backgroundtwo"
        app:layout_constraintBottom_toBottomOf="@+id/backgroundtwo"/>



</androidx.constraintlayout.widget.ConstraintLayout>